{
  "name": "sachsen",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "dev:app": "turbo run dev --filter=@repo/app",
    "dev:api": "turbo run dev --filter=@repo/api",
    "dev": "turbo run dev --filter=@repo/api --filter=@repo/app"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.5.3",
    "turbo": "^2.5.8",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@4.9.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
