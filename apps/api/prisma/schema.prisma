generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique 
  username   String    @unique
  password   String
  isEmailVerified Boolean   @default(false)
  status     UserStatus @default(PENDING)
  role       UserRole   @default(PLAYER)
  skinHash  String? @db.Char(64)

  answers    Answer[]

  friends         Friendship[] @relation("UserFriends")
  friendOf        Friendship[] @relation("UserFriendOf")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Friendship {
  id         Int  @id @default(autoincrement())
  userId     Int
  friendId   Int
  status     FriendshipStatus  @default(PENDING)

  user       User @relation("UserFriends", fields: [userId], references: [id])
  friend     User @relation("UserFriendOf", fields: [friendId], references: [id])

  createdAt  DateTime @default(now())

  @@unique([userId, friendId])
}


model Blog {
  id Int @id @default(autoincrement())
  title String
  text String
  isImportant Boolean @default(false)

  categoryId Int

  category Category  @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id Int @id @default(autoincrement())
  title String @unique

  blogs Blog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Question {
  id         Int       @id @default(autoincrement())
  text       String

  answers    Answer[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Answer {
  id          Int       @id @default(autoincrement())
  userId      Int
  questionId  Int
  answerText  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user        User      @relation(fields: [userId], references: [id])
  question    Question  @relation(fields: [questionId], references: [id])
}

model Token {
  id Int @id @default(autoincrement())

  email String
  token String @unique
  type TokenType
  expiresIn DateTime
}

model Server {
  id                Int       @id @default(autoincrement())
  name              String    @unique
  description       String
  serverAddress     String
  
  minecraftVersionHash String
  minecraftVersion String

  mods              Mod[]
}

model Mod {
  id          Int     @id @default(autoincrement())
  name        String
  
  modrinthModId String
  modrinthModVersionId String

  serverId    Int
  server      Server  @relation(fields: [serverId], references: [id])

  @@unique([serverId, name, modrinthModId])
}

enum UserRole {
  PLAYER
  ADMIN
  OWNER
}

enum UserStatus {
  APPROVED
  PENDING
  REJECTED
  BANNED
}

enum TokenType {
  VERIFICATION
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  REJECTED
}