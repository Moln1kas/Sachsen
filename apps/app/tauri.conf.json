{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SachsenLauncher",
  "version": "0.1.0",
  "identifier": "su.molnikas.app",
  "build": {
    "beforeDevCommand": "yarn dlx turbo run dev --filter=@repo/app-frontend",
    "beforeBuildCommand": "yarn dlx turbo run build --filter=@repo/app-frontend",
    "frontendDist": "../app-frontend/dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Sachsen Launcher",
        "width": 800,
        "height": 600,
        "resizable": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
